<UserControl x:Class="ProMISE2.ChromPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" xmlns:my="clr-namespace:ProMISE2" d:DesignHeight="400" d:DesignWidth="600">
    <Grid Name="mainGrid">
		<Grid.RowDefinitions>
			<RowDefinition Height="5*" />
			<RowDefinition Height="5*" />
			<RowDefinition Height="90*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="7*" />
			<ColumnDefinition Width="93*" />
		</Grid.ColumnDefinitions>
		<Image Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Name="logoImage" Source="/Promise2;component/Resources/promise.png" />
		<Viewbox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left">
			<TextBlock FontWeight="Bold" Name="titleText" Text="ProMISE2" Foreground="DarkBlue" />
		</Viewbox>
		<Viewbox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left">
			<TextBlock Name="intoText" Text="Page 1/2" />
		</Viewbox>
	</Grid>
</UserControl>
